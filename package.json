    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:component": "jest --testPathPattern=components",
    "test:hooks": "jest --testPathPattern=hooks",
    "test:stores": "jest --testPathPattern=store",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "pnpm run test:coverage && pnpm run test:e2e",
    "test:ci": "pnpm run type-check && pnpm run test:coverage && pnpm run test:e2e"
  },
  "dependencies": {
